<div class="pages">

  <h1>Welcome To Elixir Ed</h1>

  <form action="/homes">

    <h3>Start with selecting your packaging...</h3>
    <div class="input-field">
      <label for="packaging">Packaging</label>
        <select name="packaging" type="text">
          <option value=""></option>
          <option value="750ml">750ml bottle</option>
          <option value="4pk-16oz">4pk-16oz bottle/can</option>
          <option value="6pk-12oz">6pk-12oz bottle/can</option>
          <option value="16oz">16oz can</option>
          <option value="22oz">22oz bottle</option>
          <option value="500ml">500ml bottle</option>
          <option value="375ml">375ml bottle</option>
          <option value="12pk-12oz">12pk-12oz bottle/can</option>
          <option value="6pk-16oz">6pk-16oz bottle/can</option>
          <option value="3L">3 liter box</option>
        </select>
    </div>

    <h3>...or a custom volume</h3>
    <div class="input-field">
      <div class="input-volume">
        <label for="volume">Volume</label>
        <input type="text" id="volume" name="volume" placeholder="16">
      </div>

      <div class="input-volume">
        <label for="unit">Unit</label>
          <select name="unit" type="text">
            <option value=""></option>
            <option value="fluid ounces">fluid ounces</option>
            <option value="ml">ml</option>
          </select>
      </div>
    </div>

    <h3>Input your ABV</h3>
    <div class="input-field">
      <label for="abv">ABV</label>
      <input type="text" id="abv" name="abv" placeholder="5.1">
    </div>

    <h3>Optionally, input your cost</h3>
    <div class="input-field">
      <label for="cost">Cost</label>
      <input type="text" id="cost" name="cost" placeholder="10.99">
    </div>

    <button class="button" type="submit">Bartender!  Serve me!</button>

  </form>
</div>
